{% extends "@SocialNetwork/medias/instagram/medias.html.twig" %}

{% block cardImage %}
    {% set images = media.imagesUrls %}

    {% if media.images|length > 0 %}
        {% set images = media.images %}
    {% endif %}
    

    <div id="carousel-{{ media.id }}" class="carousel slide card-img-top" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for url in images %}
                {% if loop.first %}
                    {% set active = "active" %}
                {% else %}
                    {% set active = "" %}
                {% endif %}
                <li data-target="#carousel-{{ media.id }}" data-slide-to="{{ loop.index }}" class="{{ active }}"></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner">
            {% for url in images %}
                {% if loop.first %}
                    {% set active = "active" %}
                {% else %}
                    {% set active = "" %}
                {% endif %}
                <div class="carousel-item {{ active }}">  
                    {% if media.images|length > 0 %}
                        <img src="{{ asset(url.assetPath) }}" class="d-block w-100">                
                    {% else %}
                        <img src="{{ url }}" class="d-block w-100">                
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carousel-{{ media.id }}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel-{{ media.id }}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %}